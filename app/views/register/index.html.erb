<!DOCTYPE html>
<html lang="en">
    <head>
    </head>
    <body>
			<!-- form creation -->
	<div class="container"> <!-- main container -->

	<div class="row">
		<div class="span12">
			<h1> Registration Form </h1>
		</div>
	</div>
	   <div class="row"> <!-- row -->
		<div class="span12 accountStyle">
			<form name="RegForm" onsubmit="return formValidate();" method="post" action="success">
				<!-- Account Information -->
			   
   			    <fieldset >
			    <legend>Account Information</legend>
			    <div class="row">
				<div class="span11">
			         <label class="control-label span2" 
				      style="border:0px solid green"
                                      for="inputUserName">UserName *</label>
			      <div class="controls span8" style="border:0px solid blue">
				<div class="controls" style="border:0px solid blue">
				<input type="text""
				       placeholder="UserName" 
				       id="myname" name="username">	 <span id="username_msg"> </span>		    
			      </div>
				
			      </div>
                            </div>
			   </div>
			
			 <div class="row">
			     <div class="span11">
			       <label class="control-label span2" for="inputPassword">Password *</label>
 			      <div class="controls span8">
			         <input type="password" name="pwd"
					placeholder="Password" id="mypwd"> 
				 <span id="pwd_msg"> </span>	
			      </div>
			    </div>
			 </div>

			<div class="row">
			     <div class="span11">
			       <label class="control-label span2" for="inputPassword">Confirm Password *</label>
 			      <div class="controls span8">
			         <input type="password" name="cpwd"
					placeholder="Reset Password" id="mycpwd"> 
				 <span id="cpwd_msg"> </span>	
			      </div>
			    </div>
			 </div>
			  </fieldset> <!-- Account Information completed -->
					

					<!-- Profile Information -->

			<fieldset>
			    <legend>Profile Information</legend>

			  <div class="row">
			    <div class="span11">
			      <label class="control-label span2" for="inputfname">FirstName *</label>
			      <div class="controls span8">
				<input type="text" name="fname" onblur="return fnameValidate();"
				       placeholder="First Name" id="fname">
				<span id="fname_msg"> </span>			    
			      </div>
                            </div>
  			  </div>
			

			   <div class="row">
			    <div class="span11">
			       <label class="control-label span2" for="inputlname">LastName *</label>
 			      <div class="controls span8">
			         <input type="text" name="lname" onblur="return lnameValidate()"
					placeholder="Last Name" id="lname">
				 <span id="lname_msg"> </span>	
			      </div>
			    </div>
			   </div>


			   <div class="row">
			    <div class="span11">
			       <label class="control-label span2" for="inputpropic">Profile Picture *</label>
 			      <div class="controls span8">
			         <input type="file" id="propic"
					name="propic" onchange="return propicValidate();"
					>
				 <span id="propic_msg"> </span>	
			      </div>
			    </div>
			   </div>

			   
			  <div class="row">
			   <div class="span10 genradio">
			       <label class="control-label span2 pull-top" for="inputGender">Gender *</label>
 			      <div class="controls span7">
				    <label class="radio">
					<input type="radio" 
					       name="sex" id="inputradio" value="male" checked> Male
				    </label>
				    <label class="radio">
					<input type="radio" 
					       name="sex" id="inputradio" value="female"> Female
				    </label>
				    
			      </div>
			    </div>
			   </div>


			  <div class="row">
		           <div class="span10">
			       <label class="control-label span2" for="inputdob">Date of Birth *</label>
 			      <div class="controls span7">
					<select class="datesel" name="day" 
								onchange="return dob_validation(this);"
								id="day">
					<option value="sel"> Day </option>
					<option value="1"> 1 </option>
					<option value="2"> 2 </option>
					<option value="3"> 3 </option>
					<option value="4"> 4 </option>
					<option value="5"> 5 </option>
					<option value="6"> 6 </option>
					<option value="7"> 7 </option>
					<option value="8"> 8 </option>
					<option value="9"> 9 </option>
					<option value="10"> 10 </option>
					<option value="11"> 11 </option>
					<option value="12"> 12 </option>
					<option value="13"> 13 </option>
					<option value="14"> 14 </option>
					<option value="15"> 15 </option>
					<option value="16"> 16 </option>
					<option value="17"> 17 </option>
					<option value="18"> 18 </option>
					<option value="19"> 19 </option>
					<option value="20"> 20 </option>
					<option value="21"> 21 </option>
					<option value="22"> 22 </option>
					<option value="23"> 23 </option>
					<option value="24"> 24 </option>
					<option value="25"> 25 </option>
					<option value="26"> 26 </option>
					<option value="27"> 27 </option>
					<option value="28"> 28 </option>
					<option value="29"> 29 </option>
					<option value="30"> 30 </option>
					<option value="31"> 31 </option>
			         </select>
				 <select class="datesel" name="month" id="mon"
							 onchange="return dob_validation(this);"
							 >
					<option value="sel"> Month </option>
  					<option value="jan"> Jan </option>
					<option value="feb"> Feb </option>
					<option value="mar"> Mar </option>
					<option value="apr"> Apr </option>
					<option value="may"> May </option>
					<option value="jun"> Jun </option>
					<option value="jul"> Jul </option>
					<option value="aug"> Aug </option>
					<option value="sep"> Sep </option>
					<option value="oct"> Oct </option>
					<option value="nov"> Nov </option>
					<option value="dec"> Dec </option>
				 </select>
				 <select class="datesel" name="year" id="year"
							 onchange="return dob_validation(this);"
							 >
					<option value="sel"> Year </option>
  					<option value="1980"> 1980 </option>
					<option value="1981"> 1981 </option>
					<option value="1982"> 1982 </option>
					<option value="1983"> 1983 </option>
					<option value="1984"> 1984 </option>
					<option value="1985"> 1985 </option>
					<option value="1986"> 1986 </option>
					<option value="1987"> 1987 </option>
					<option value="1988"> 1988 </option>
					<option value="1989"> 1989 </option>
					<option value="1990"> 1990 </option>
					<option value="1991"> 1991 </option>
					<option value="1992"> 1992 </option>
					<option value="1993"> 1993 </option>
					<option value="1994"> 1994 </option>
					<option value="1995"> 1995 </option>
					<option value="1996"> 1996 </option>
					<option value="1997"> 1997 </option>
					<option value="1998"> 1998 </option>
					<option value="1999"> 1999 </option>
					<option value="2000"> 2000 </option>
					<option value="2001"> 2001 </option>
					<option value="2002"> 2002 </option>
					<option value="2003"> 2003 </option>
					<option value="2004"> 2004 </option>
					<option value="2005"> 2005 </option>
					<option value="2006"> 2006 </option>
					<option value="2007"> 2007 </option>
					<option value="2008"> 2008 </option>
					<option value="2009"> 2009 </option>
					<option value="2010"> 2010 </option>
					<option value="2011"> 2011 </option>
					<option value="2012"> 2012 </option>
					<option value="2013"> 2013 </option>
			         </select>	
				  <span id="dob_msg">  </span>
			      </div>
			    </div>
			  </div>


			  <div class="row">
			   <div class="span10 genradio">
			        <label class="span2 pull-top" for="inputHobbies">Hobbies *</label>
 			      <div class="controls span7">
				     <label class="radio">
					<input type="radio"  
					       name="painting" id="optionsRadios1"
					       nblur="hobby_validation(this);" value="painting"
						onchange="hobby_validation(this);"> Painting
				     </label>
				     <label class="radio">
					<input type="radio" 
					       name="singing" id="optionsRadios2"
					       nblur="hobby_validation(this);" value="singing"
					       onchange="hobby_validation(this);"> Singing
				    </label>
				    <label class="radio">
					<input type="radio"
					       name="traveling" id="optionsRadios3"
					       nblur="hobby_validation(this);" value="travel"
					       onchange="hobby_validation(this);"> Traveling
				    </label>
				    <label class="radio">
					<input type="radio"
					       name="dancing" id="optionsRadios4" 
						nblur="hobby_validation(this);" value="dance"
						onchange="hobby_validation(this);"> Dancing
				    </label>
				    <label class="radio">
					<input type="radio" 
					       name="gardening" id="optionsRadios5"
						nblur="hobby_validation(this);" value="gardening"
						onchange="hobby_validation(this);"> Gardening
				    </label>
				    <label class="radio">
					<input type="radio" 
					       name="other" id="optionsRadios6"
						nblur="hobby_validation(this);" value="other"
						onchange="hobby_validation(this);"> Others
					
				    </label> <span id="hobby_msg"> </span>
				    
			      </div>
			    </div>
			   </div>


			  <div class="row">
			   <div class="span10 selection">
			        <label class="control-label span2" for="inputhavebeen">Have Been to *</label>
 			      <div class="controls span7">
			         <select  multiple="multiple"
					  name="country" id="country"
					  nblur="return country_validation(this);"
					  onchange="return country_validation(this);">
					<option value="India"> India</option>
					<option value="Australia"> Australia </option>
					<option value="Srilanka"> Srilanka </option>
					<option value="Bangladesh"> Bangladesh </option>
					<option value="NewZeland"> NewZeland </option>
					<option value="South Africa"> South Africa </option>
					<option value="England"> England </option>
					<option value="West Indies"> West Indies  </option>
					<option value="Kenya"> Kenya </option>
					<option value="Nepal"> Nepal </option>
				</select>
					<span id="country_msg"> </span>
			      </div>
			     </div>
			  </div>				
		       </fieldset> <!-- Profile Information completed -->

					<!-- Contact Information -->
		       <fieldset>
			    <legend>Contact Information</legend>

			   <div class="row">
			    <div class="span10">
			       <label class="control-label span2" for="inputPhnum">Phone *</label>
			      <div class="controls span7">
				<input type="text" name="phnum"
				       id="phone" 
				       placeholder="+ 91 (990)-824-7888"
				       onblur="return phone_validation(this)">
					<span id="phone_msg"> </span>			    
			      </div>
			    </div>
			   </div>
			   <div class="row">
			 	<div class="span10">
				  <center> <div class="span6"> <button type="submit" class="btn btn-success"> Submit </button> 
				<button type="reset" class="btn btn-inverse" onclick="hideBar();"> Clear </button> </div> 
				</div> </center>
			  </div>
			  </fieldset>
			</form>
		</div>
	    </div>
	</div>
    </body>
</html>
